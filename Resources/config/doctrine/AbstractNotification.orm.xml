<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <mapped-superclass name="Mgilet\NotificationBundle\Entity\AbstractNotification">

        <field name="date" column="date" type="datetime" nullable="true"/>
        <field name="subject" column="subject" type="string" length="255" nullable="false"/>
        <field name="message" column="message" type="string" length="255" nullable="true"/>
        <field name="link" column="link" type="string" length="255" nullable="true"/>
        <field name="seen" column="seen" type="boolean" nullable="true"/>

    </mapped-superclass>

</doctrine-mapping>